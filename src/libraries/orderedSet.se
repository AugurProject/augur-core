def push(value):
    itemId = self.nextId
    self.nextId += 1
    self.values[value] = itemId
    self.collection[itemId].value = value
    self.collection[itemId].prev = self.head
    self.head = itemId
    if (not self.tail):
        self.tail = itemId
    self.count += 1
    self.assertInvariants()

def pop():
    self.assertNotEmpty()
    index = self.head
    value = self.collection[index].value
    prev = self.collection[index].prev
    self.values[index] = 0
    self.collection[index].prev = 0
    self.collection[index].value = 0
    self.head = prev
    if (self.tail == index):
        self.tail = 0
    self.count -= 1
    self.assertInvariants()
    return(value)

